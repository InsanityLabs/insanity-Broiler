# App Configuration
APP_NAME="Insanity Broiler"
APP_URL="http://localhost:3000"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Database (Required for email authentication)
# Choose your database provider and update the schema.prisma accordingly
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
# DATABASE_URL="mysql://username:password@localhost:3306/database_name"
# DATABASE_URL="file:./dev.db" # for SQLite

# Email Configuration (for email authentication)
# Option 1: SMTP Server
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# Option 2: Resend (recommended)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

